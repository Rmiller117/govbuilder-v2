{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Main app capability with FS access to local app data",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message"
  ],
  "scopes": [
    {
      "identifier": "fs:scope",
      "allow": [
        "$APP_LOCAL_DATA/**"
      ]
    }
  ]
}